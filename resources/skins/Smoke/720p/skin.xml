<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <resolution>720p</resolution>
    <useincludes>false</useincludes>
    <defaultcontrol>100</defaultcontrol>
    <allowoverlay>false</allowoverlay>
    <type>dialog</type>

    <!-- 100 = list group -->
    <!-- 200 = back -->
    <!-- 300 = play -->
    <!-- 400 = next -->
    <!-- 500 = station logo -->

    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>

    <controls>
        <control type="image">
            <description>Black background to hide menu flashes between songs</description>
            <visible>!Window.IsVisible(Visualisation)</visible>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>1px-black.png</texture>
        </control>
        <control type="group">
            <control type="group">
                <animation effect="fade" time="300">VisibleChange</animation>
                <control type="image">
                    <description>panel</description>
                    <posx>00</posx>
                    <posy>00</posy>
                    <width>1280</width>
                    <height>720</height>
                    <texture border="20,10,10,30">panel.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <description>StationsListBorder</description>
                    <posx>50</posx>
                    <posy>90</posy>
                    <width>430</width>
                    <height>550</height>
                    <texture>stations-list.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>
                <control type="group">
                    <posx>75</posx>
                    <posy>140</posy>
                    <control type="group">
                        <animation effect="fade" reversible="true" time="300">VisibleChange</animation>
                        <control type="list" id="100">
                            <width>390</width>
                            <height>450</height>
                            <onleft>400</onleft>
                            <onright>200</onright>
                            <onup>100</onup>
                            <ondown>100</ondown>
                            <viewtype label="535">list</viewtype>
                            <scrolltime>200</scrolltime>
                            <itemlayout height="32">
                                <control type="image">
                                    <width>375</width>
                                    <height>30</height>
                                    <posx>0</posx>
                                    <posy>0</posy>
                                    <texture border="3">twc-input-nofocus.png</texture>
                                </control>
                                <control type="label">
                                    <posx>10</posx>
                                    <posy>0</posy>
                                    <width>355</width>
                                    <height>30</height>
                                    <font>font12</font>
                                    <aligny>center</aligny>
                                    <textcolor>FF000000</textcolor>
                                    <selectedcolor>FFA60000</selectedcolor>
                                    <align>left</align>
                                    <visible>True</visible>
                                    <info>ListItem.Label</info>
                                    <info>RunScript(plugin.audio.radiohy,mode=check_time,value=saqo)</info>
                                </control>
                            </itemlayout>
                            <focusedlayout height="32">
                                <control type="image">
                                    <width>375</width>
                                    <height>30</height>
                                    <posx>0</posx>
                                    <posy>0</posy>
                                    <visible>Control.HasFocus(100)</visible>
                                    <texture border="3">twc-input-focus.png</texture>
                                </control>
                                <control type="image">
                                    <width>375</width>
                                    <height>30</height>
                                    <posx>0</posx>
                                    <posy>0</posy>
                                    <visible>!Control.HasFocus(100)</visible>
                                    <texture border="3">twc-input-nofocus.png</texture>
                                </control>
                                <control type="label">
                                    <posx>10</posx>
                                    <posy>0</posy>
                                    <width>335</width>
                                    <height>30</height>
                                    <font>font12</font>
                                    <style>bold</style>
                                    <aligny>center</aligny>
                                    <textcolor>DDFFFFFF</textcolor>
                                    <selectedcolor>FF000000</selectedcolor>
                                    <align>left</align>
                                    <info>ListItem.Label</info>
                                </control>
                            </focusedlayout>
                        </control>
                    </control>

                    <control type="group">
                        <posx>410</posx>
                        <posy>0</posy>
                        <control type="image" id="500">
                            <description>album art</description>
                            <posx>70</posx>
                            <posy>0</posy>
                            <width>217</width>
                            <height>217</height>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <!--Added Button Background Border-->
                        <control type="image">
                            <description>ButtonBackground</description>
                            <posx>38</posx>
                            <posy>273</posy>
                            <width>550</width>
                            <height>255</height>
                            <texture>buttons-bg.png</texture>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <!--END Button Background Border-->
                        <control type="label">
                            <description>song title</description>
                            <posx>320</posx>
                            <posy>15</posy>
                            <width>390</width>
                            <height>45</height>
                            <font>font13</font>
                            <textcolor>ff000000</textcolor>
                            <align>left</align>
                            <info>MusicPlayer.Title</info>
                        </control>
                        <control type="label">
                            <description>artist</description>
                            <posx>320</posx>
                            <posy>60</posy>
                            <width>390</width>
                            <height>45</height>
                            <font>font13</font>
                            <textcolor>ff000000</textcolor>
                            <align>left</align>
                            <info>MusicPlayer.Artist</info>
                        </control>
                        <control type="label">
                            <description>album</description>
                            <posx>320</posx>
                            <posy>105</posy>
                            <width>390</width>
                            <height>45</height>
                            <font>font13</font>
                            <textcolor>ff000000</textcolor>
                            <align>left</align>
                            <info>MusicPlayer.Album</info>
                        </control>
                        <control type="label">
                            <description>rating</description>
                            <posx>320</posx>
                            <posy>150</posy>
                            <width>390</width>
                            <height>45</height>
                            <font>font13</font>
                            <textcolor>ff000000</textcolor>
                            <align>left</align>
                            <info>MusicPlayer.Rating</info>
                        </control>
                        <control type="progress">
                            <posx>37</posx>
                            <posy>270</posy>
                            <width>548</width>
                            <height>20</height>
                            <info>Player.Progress</info>
                        </control>
                        <!--Control Buttons-->
                        <control type="button" id="200">
                            <description>back</description>
                            <visible>True</visible>
                            <posx>163</posx>
                            <posy>350</posy>
                            <height>75</height>
                            <width>75</width>
                            <onleft>100</onleft>
                            <onright>300</onright>
                            <onup>100</onup>
                            <ondown>100</ondown>
                            <aspectratio>keep</aspectratio>
                            <texturefocus>back.png</texturefocus>
                            <texturenofocus>back-nofocus.png</texturenofocus>
                        </control>
                        <control type="togglebutton" id="300">
                            <description>play</description>
                            <posx>274</posx>
                            <posy>350</posy>
                            <height>75</height>
                            <width>75</width>
                            <label>-</label>
                            <onleft>200</onleft>
                            <onright>400</onright>
                            <onup>100</onup>
                            <ondown>100</ondown>
                            <aspectratio>keep</aspectratio>
                            <texturefocus>play.png</texturefocus>
                            <texturenofocus>play-nofocus.png</texturenofocus>
                            <usealttexture>Player.Playing</usealttexture>
                            <alttexturefocus>pause.png</alttexturefocus>
                            <alttexturenofocus>pause-nofocus.png</alttexturenofocus>
                            <onclick>XBMC.PlayerControl(Play)</onclick>
                        </control>
                        <control type="button" id="400">
                            <description>skip</description>
                            <posx>384</posx>
                            <posy>350</posy>
                            <height>75</height>
                            <width>75</width>
                            <onleft>300</onleft>
                            <onright>100</onright>
                            <onup>100</onup>
                            <ondown>100</ondown>
                            <aspectratio>keep</aspectratio>
                            <texturefocus>skip.png</texturefocus>
                            <texturenofocus>skip-nofocus.png</texturenofocus>
                        </control>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
