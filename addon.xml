<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.radiohy" name="RadioHY" version="1.0" provider-name="Gagik Hakobyan">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Listen to the Armenian radio stations online.</summary>
    <description>With this plugin you'll be able to listen to the all Armenian radio stations that are broadcasting online.</description>
    <email>hakgagik@yahoo.com</email>
  </extension>
  <extension point="xbmc.gui.skin" debugging="true" effectslowdown="0.75">
      <res width="1280" height="720" aspect="16:9" default="true" folder="720p"/>
  </extension>
</addon>
